{
  "source": {
    "include": ["public/javascripts"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "recurse": true,
    "destination": "./public/documentation/docs",
    "template": "./public/documentation/custom_template",
    "tutorials": "./public/documentation/tutorials",
    "readme": "./README.md"
  }
}
