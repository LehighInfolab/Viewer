{
  "source": {
    "include": ["public/javascripts"],
    "includePattern": ".js$",
    "exclude": [
      "public/javascripts/webgl-utils.js",
      "public/javascripts/ngl.js",
      "public/javascripts/3Dmol-min.js",
      "src/controllers",
      "src/executables",
      "src/lib"
    ],
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "recurse": true,
    "destination": "./public/documentation/docs",
    "template": "./public/documentation/custom_template",
    "tutorials": "./public/documentation/tutorials",
    "readme": "./README.md"
  }
}
